{
  "version": 2,
  "buildCommand": "next build",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/.well-known/farcaster.json", "destination": "/api/farcaster.json" },
    { "source": "/.well-known/farcaster/manifest.json", "destination": "/api/farcaster-manifest" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *"
        },
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    }
  ]
} 